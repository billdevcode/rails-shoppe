%h1 INVENTORY

%h3 Categories
#{link_to 'Add Category', new_category_path}

%table.table
  %tr
    %td.col-xs-2 Name
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category_path(category)
        %td
          %small
            = link_to 'Edit', edit_category_path(category)
            = link_to 'Delete', [category], method: :delete, data: { confirm: 'Are you sure?' }

%h3 Products
#{link_to 'Add Product', new_product_path}

%table.table
  %tr
    %td.col-xs-2 Name
    %td.col-xs-4 Description
    %td.col-xs-2 Price
    %td.col-xs-2 Remaining Quantity
    %td.col-xs-2
  - @products.each do |product|
    %tr
      %td
        = link_to product.name, product_path(product)
      %td= product.description
      %td $#{number_with_precision(product.price, precision: 2)}
      %td= product.remaining_qty
      %td
        %small
          = link_to 'Edit', edit_product_path(product)
          = link_to 'Delete', [product], method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'Home', root_path

