.container
  = form_for @user, html: {class: 'form-signin'} do |f|
    %h1.form-signin-heading Create New User
    - if @user.errors.any?
      %div
        - flash.each do |message_type, message|
          .alert{class: "alert-#{message_type}"}
            = message
        - flash.clear
        %h3
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

    = f.label :'Userame', class: "control-label"
    = f.text_field :username, class: "form-control", autofocus: true

    = f.label :'Email', class: "control-label"
    = f.email_field :email, class: "form-control"

    = f.label :'Password', class: "control-label"
    = f.password_field :password_hash, class: "form-control"
    %br
    = f.submit class: "btn btn-primary btn-block btn-lg"
  = link_to 'Back', :back
